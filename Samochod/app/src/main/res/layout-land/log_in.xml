<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/porsche2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/logIn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="32dp"
            android:text="@string/log"
            android:textColor="@color/white"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/email_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginStart="17dp"
            android:layout_alignBottom="@+id/profile_icon"
            android:layout_alignStart="@+id/logIn_tv" />

        <EditText
            android:id="@+id/password_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_alignTop="@+id/logIn_button"
            android:layout_alignStart="@+id/email_et" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/profile_icon"
            android:layout_alignTop="@+id/logIn_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="67dp" />

        <Button
            android:id="@+id/logIn_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profile_icon"
            android:layout_below="@+id/profile_icon"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_shape"
            android:text="@string/logIn"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/register_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/password_et"
            android:layout_alignStart="@+id/profile_icon" />

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/link"
            android:layout_below="@+id/register_info"
            android:layout_alignEnd="@+id/logIn_button"
            android:layout_marginEnd="19dp" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>