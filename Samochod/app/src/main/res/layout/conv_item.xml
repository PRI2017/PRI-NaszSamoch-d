<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">
    <!--POJEDYNCZY WIERSZ W KTORYM ZNAJDUJE SIE WIADOMOSC OD DANEGO UZYTKOWNIKA (POJEDYNCZA WIADOMOSC W GRUPIE)-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/card_view"
        android:layout_margin="1dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="10dp"
        app:cardElevation="30dp"
        app:contentPadding="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/message_tv_conv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/username_tv_conv"
            android:layout_toEndOf="@+id/username_tv_conv"
            android:textColor="@color/white"
            android:layout_marginStart="42dp" />

        <TextView
            android:id="@+id/username_tv_conv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="TextView"
            android:textColor="@color/white"
           />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
