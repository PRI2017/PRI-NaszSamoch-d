<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--POJEDYNCZY WIERSZ W KTORYM ZNAJDUJE SIE WIADOMOSC OD DANEGO UZYTKOWNIKA (POJEDYNCZA WIADOMOSC W GRUPIE)-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- <ImageView
                android:id="@+id/profile_icon_conv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@android:drawable/btn_star_big_on" /> -->

            <TextView
                android:id="@+id/username_tv_conv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:text="TextView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp" />

            <TextView
                android:id="@+id/message_tv_conv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/username_tv_conv"
                android:layout_alignStart="@+id/username_tv_conv"
                android:layout_marginTop="15dp" />
        </RelativeLayout>

    </TableRow>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="15dp"
        android:text="Użytkownik:" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user"
        android:layout_below="@+id/user"
        android:layout_marginTop="12dp"
        android:text="Wiadomość:" />

</RelativeLayout>