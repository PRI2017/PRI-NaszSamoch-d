<!DOCTYPE html>
@model PRI_NaszSamochód.Models.RegisterViewModel

@*@{
    ViewBag.Title = "Register";
}*@

<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Content/css/normalize.css">
    <link rel="stylesheet" href="~/Content/css/main.css">
    <link rel="stylesheet" href="~/Content/css/loginPage.css">

    <title>Strona logowania</title>
</head>
<body class="loginPageBody">
    <div class="loginPage-container">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            =
            <ul class="flex-outer">
                <li>
                    <label for="inputName">Imię: </label>
                    @Html.TextBoxFor(m => m.Name)
                </li>
                <li>
                    <label for="inputName">Nazwisko: </label>
                    @Html.TextBoxFor(m => m.Surname)
                </li>
                <li>
                    <label for="inputPhone">Numer telefonu: </label>
                    @Html.TextBoxFor(m => m.PhoneNumber)
                </li>
                <li>
                    <label for="inputEmail">E-mail: </label>
                    @Html.TextBoxFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </li>
                <li>
                    <label for="inputPassword">Hasło: </label>
                    @Html.PasswordFor(m => m.Password)

                </li>
                <li>
                    <label for="inputConfirmedPassword">Powtórz hasło: </label>
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </li>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                <li>
                    <button type="submit" class="btn-success" value="Register">Zarejestruj się</button>
                </li>
            </ul>
        }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>

</html>