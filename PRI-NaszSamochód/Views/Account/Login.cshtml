<!DOCTYPE html>
@using PRI_NaszSamochód.Models
@model LoginViewModel
@*@{
    ViewBag.Title = "Log in";
}*@

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/Content/css/normalize.css">
    <link rel="stylesheet" href="~/Content/css/main.css">
    <link rel="stylesheet" href="~/Content/css/loginPage.css">

    <title>Strona logowania</title>
</head>

<body class="loginPageBody">
    <div class="loginPage-container">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <ul class="flex-outer">
                <li>
                    <label for="inputEmail">Podaj adres e-mail: </label>
                    @Html.TextBoxFor(m => m.Email, new { @id = "inputEmail" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </li>

                <li class="form-group">
                    <label for="inputPassword">Podaj hasło: </label>
                    @Html.PasswordFor(m => m.Password, new { @id = "inputPassword" })
                </li>
                <li>
                    <button type="submit" class="btn-success">Zaloguj</button>
                    <a class="btn-success" style="text-decoration: none; font-size: 0.875rem; margin: 20px;" href="/Account/Register">Zarejestruj</a>
                </li>
            </ul>
        }
    </div>
</body>

</html>